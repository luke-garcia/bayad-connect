<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.cbci.com.bayadconnect.SignIn"
    tools:showIn="@layout/activity_sign_in">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/bayadconnect"
                android:padding="10dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lin_login">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/label_welcome"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="#053c7a"
                     />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:id="@+id/field_email"
                        android:layout_margin="10dp"
                        android:textColor="#000"
                        android:hint="@string/field_email"
                        android:maxLines="1"
                        android:minLines="1"
                        android:lines="1"
                        android:layout_weight="1"
                        android:inputType="textEmailAddress" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="@string/label_questionmark"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#053c7a"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:id="@+id/btn_tpaid"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/img_tpaid"
                        android:src="@drawable/info"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:id="@+id/field_password"
                        android:layout_margin="10dp"
                        android:textColor="#000"
                        android:hint="@string/field_password"
                        android:maxLines="1"
                        android:minLines="1"
                        android:lines="1"
                        android:layout_weight="1"
                        android:inputType="textPassword" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="@string/label_questionmark"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#053c7a"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:id="@+id/btn_pword"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/img_pword"
                        android:src="@drawable/info"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />
                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/label_login"
                    android:id="@+id/btn_login"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:background="#053c7a"/>
<!--"#053c7a"-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/label_register"
                        android:id="@+id/btn_register"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="#053c7a"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/label_forgot"
                        android:id="@+id/btn_forgot"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="#053c7a"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/label_contact"
                android:id="@+id/btn_contact"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#053c7a"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Terms of Service and Data Privacy Policy"
                android:id="@+id/btn_terms"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#053c7a"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lin_forgot"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/label_forgot"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="#053c7a"
                     />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/field_forgotemail"
                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:background="@drawable/field_border"
                    android:hint="@string/field_email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:inputType="number"
                    android:id="@+id/field_mobile"
                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:background="@drawable/field_border"
                    android:hint="@string/field_mobileno"
                    android:maxLines="1" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/label_submit"
                    android:id="@+id/btn_forgotcredentials"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_gravity="center_horizontal"
                    android:background="#053c7a"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/label_cancel"
                    android:id="@+id/btn_cancel"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#053c7a"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
